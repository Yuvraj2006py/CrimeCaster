# Supabase Database Configuration
# Get these values from your Supabase project settings: https://supabase.com/dashboard/project/_/settings/database

# Supabase Project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Direct Database Connection (for migrations and batch jobs)
SUPABASE_DB_HOST=db.your-project-id.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_PASSWORD=your-database-password

# Connection Pooling URL (for API - recommended for production)
# Use port 6543 for connection pooling
DATABASE_URL=postgresql://postgres:your-database-password@db.your-project-id.supabase.co:6543/postgres?pgbouncer=true

# Alternative: Direct connection (for migrations)
# DATABASE_URL=postgresql://postgres:your-database-password@db.your-project-id.supabase.co:5432/postgres

# Mapbox Access Token (for 3D map visualization)
# Get your token from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Model Storage
MODEL_STORAGE_PATH=./models

# Data Storage
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
